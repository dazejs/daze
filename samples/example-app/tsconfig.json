  {
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": [
        "esnext"
      ],
      "sourceMap": true,
      "outDir": "dist",
      "removeComments": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      },
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "experimentalDecorators": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules/**/*"
    ]
  }